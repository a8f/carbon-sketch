{
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "root": true,
    "rules": {
        "indent": [
            "error",
            4
        ],
        "max-len": [
            "error",
            120
        ],
        "quotes": [
            "error",
            "double",
            {
                "avoidEscape": true
            }
        ],
        "no-use-before-define": [
            "error",
            "nofunc"
        ],
        "array-element-newline": [
            "error",
            "consistent"
        ],
        "function-call-argument-newline": [
            "error",
            "consistent"
        ],
        "semi": 1
    }
}
